{
  "name": "docker-helper",
  "version": "1.0.0",
  "description": "Helper script to run Docker containers",
  "scripts": {
    "docker-build": "docker build -t shopify-cli-image .",
    "docker-run": "docker run -it --rm --name shopify-cli-image -v $(pwd):/workspace -v ~/.ssh:/root/.ssh -p 9292:9292 shopify-cli-image",
    "docker-exec": "docker exec -it shopify-cli-image bash",
    "dev": "shopify theme dev --host=0.0.0.0",
    "theme-dev": "dotenv -e .env shopify theme dev --host=0.0.0.0 -s=$STORE_URL",
    "theme-list": "dotenv -e .env shopify theme list -s=$STORE_URL",
    "theme-push": "dotenv -e .env shopify theme push -s=$STORE_URL",
    "theme-pull": "dotenv -e .env shopify theme pull -s=$STORE_URL"
  },
  "author": "Chiennv",
  "license": "MIT"
}